{{#each thoughts as |thought|}}
  <section data-id="{{thought.id}}">
    <h5>Yeet ID: {{thought.id}}</h5>
    <h5>You yeeted: </h5>
    <p>
      {{#if thought.words}}
        {{thought.words}}
      {{else}}
        No words provided.
      {{/if}}
    </p>
    <form id="update-thought">
      <h4>Update One Thought:</h4>
      <input type="text" placeholder="A thought to fix" name="thought[words]" required>
      <button type="submit" class="btn btn-outline-light">Submit</button>
    </form>
    <button data-id="{{thought.id}}" class="btn btn-outline-danger delete-button">Delete Yeet!</button>
  </section>

{{/each}}
